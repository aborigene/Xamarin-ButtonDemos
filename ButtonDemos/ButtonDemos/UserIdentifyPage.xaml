                    <x:String>Jonh Doe</x:String>
                    <x:String>Harvey Heavyweather</x:String>
                    <x:String>Monica Clearwater</x:String>
                    <x:String>Joan D'Arc</x:String>
                    <x:String>Ellen Silva</x:String>
                    <x:String>July First</x:String>
                    <x:String>Bob McIron</x:String>
                </Picker.Items>
            </Picker>

            <!--<Label Text="Selected user: " ></Label> -->
            <Button Text="Use selected user..." Clicked="Button_Clicked" />
    
        </StackLayout>
    </ContentPage.Content>
</ContentPage>